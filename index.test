const
  { test, Server, Resource }
    = require ('.')


, zip = tokens =>
    [
      (result, fragment) =>
        result += `${ fragment }${ tokens.shift () || '' }`
    , ''
    ]


function Case (definition) {
  console.warn ('Case definition', definition)

}

function test2 (fragments, ...tokens) {
  let
    title =
      fragments.reduce
        ( ... zip (tokens) )

  console.warn ('Title', title)
}


