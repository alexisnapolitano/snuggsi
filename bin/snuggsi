echo

PARAMS=$@
export ENTRY=`dirname $(readlink $BASH_SOURCE)`
export BIN=$(cd `dirname $BASH_SOURCE`/$ENTRY; pwd)
export SNUGGSI=$(dirname $BIN)
export SCRIPT="$BIN/$1"
export DIRECTORY="$2"

function execute {
  $SCRIPT $DIRECTORY
}

echo BASH SOURCE: $BASH_SOURCE
echo ENTRY: $ENTRY
echo BIN: $BIN
echo SNUGGSI: $SNUGGSI
echo SCRIPT: $SCRIPT
echo PARAMS: $PARAMS
echo PARAMS Lenth: ${#@}

if [ snuggsi != "$1" ] && [ -e $SCRIPT ]
  then
    execute
  else
    echo ðŸ”´ Invalid command
  fi

for PARAM in PARAMS
  do
  # if [[ $PARAM == -* ]
    if [[ -d $PARAM ]]; then
      echo $PARAM
    else
      echo "NO DIRECTORY $PARAM"
    fi
  done
