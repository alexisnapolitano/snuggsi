echo

PARAMS=$@
export ENTRY=`dirname $(readlink $BASH_SOURCE)`
export BIN=$(cd `dirname $BASH_SOURCE`/$ENTRY; pwd)
export SNUGGSI=$(dirname $BIN)
export COMMAND="$BIN/$1"
export DIRECTORY="$2"

echo SNUGGSI: $SNUGGSI
echo PARAMS: $PARAMS
echo PARAMS Lenth: ${#@}

if [ snuggsi != "$1" ] && [ -e $SCRIPT ]
  then
    $COMMAND $DIRECTORY
  else
    echo üî¥ Invalid command
  fi

for PARAM in $PARAMS
  do
    echo The Param $PARAM

    if [[ -d $PARAM ]]; then
      echo " - üìÅ  $PARAM"
    else
      echo NO DIRECTORY $PARAM
    fi
  done
