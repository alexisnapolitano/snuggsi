echo "  ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„     snuggsi ãƒ„   ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ "
echo "  ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„                  ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ "
echo "  ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ãƒ„ "

export ENTRY=`dirname $(readlink $BASH_SOURCE)`
export BIN=$(cd `dirname $BASH_SOURCE`/$ENTRY; pwd)
export SNUGGSI=$(dirname $BIN)
export COMMAND="$BIN/$1"
export RESOURCES=("${@:2}")


function execute {
  echo
  echo "ðŸ“š  EXECUTING RESOURCES â€¦"
  echo
  printf ' ðŸ‘‰  ðŸ“—  %s\n' "${RESOURCES[@]}"
  echo


  for RESOURCE in ${RESOURCES[@]}
    do
      if [[ -d $RESOURCE ]]; then
        $COMMAND $RESOURCE
      else
        echo "ðŸ”´  $RESOURCE NOT A DIRECTORY"
      fi
    done
}


if test -f $COMMAND && \
   test snuggsi != "$1"

  then
    execute
  else
    echo "ðŸ”´  Invalid command"

fi

echo
