#!/usr/bin/env bash

declare -x ROOT=${1:-`pwd`}
declare -x PORT=${PORT:-3000}
export BROWSER_PORT=$((PORT+1))

BROWSER=./node_modules/.bin/browser-sync
CONFIGURATION="--config watch/browser.es"
BROWSE="$BROWSER start $CONFIGURATION"
WATCH="bin/watch"

echo $BROWSE

bin/serve $ROOT \
  & $BROWSE     \
  & $WATCH      \
