#!/usr/bin/env bash

declare -rx ROOT=${1:-`pwd`}
declare -rx PORT=${PORT:-3000}
declare -rx BROWSER_PORT=$((PORT+1))

declare -r BROWSER=./node_modules/.bin/browser-sync
declare -r CONFIGURATION="--config watch/browser.es"
declare -r BROWSE="$BROWSER start $CONFIGURATION"
declare -r WATCH="bin/watch"

echo SNUGGSI $SNUGGSI
echo BROWSE $BROWSE
echo WATCH $WATCH

bin/serve $ROOT \
  & $BROWSE     \
  & $WATCH      \
