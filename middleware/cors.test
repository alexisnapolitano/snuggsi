const
  { test, browse, get }
    = require ('test')

, assets = require ('.')

, Server
    = require ('server')

, request
   = require ('request')


test ('Access-Control-Allow-Origin: *', t => {

  const
    server
      = (new Server).serve ``

  request.get ('http://localhost:8181/', (_, response) => {
    console.log (response.headers)

    t.equal ('*', response.headers ['access-control-allow-origin'])
  })

  server.close ()
  t.end ()
})
