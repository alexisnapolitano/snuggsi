const
  { test, fetch }
    = require ('test')

, { Server }
    = require ('..')


test ('calling next middleware')


test ("Content-Security-Policy: default-src 'none';", async t => {

  const
    server   = (new Server).serve ``
  , response = await fetch ('http://localhost:8181/')


  t.ok (response.headers.get ('content-security-policy'))

  server.close ``
  t.end ()
})
